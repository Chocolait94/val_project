<script>
document.addEventListener('DOMContentLoaded', function() {
    // Trigger entrance animations on scroll
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver(function(entries) {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
            }
        });
    }, observerOptions);

    // Observe all animated elements
    const animatedElements = document.querySelectorAll('[style*="opacity: 0"]');
    animatedElements.forEach(el => observer.observe(el));
    
    // Add smooth hover effects
    const cards = document.querySelectorAll('.card-hover, .section-card');
    cards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.transform = this.classList.contains('section-card') ? 'translateX(5px)' : 'translateY(-8px)';
        });
        card.addEventListener('mouseleave', function() {
            this.style.transform = this.classList.contains('section-card') ? 'translateX(0)' : 'translateY(0)';
        });
    });
});
</script>
